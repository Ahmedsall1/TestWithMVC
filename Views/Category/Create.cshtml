@model Category


<form method="post">
    <div class="border p-3 mt-4 ">
        <div class="row pd-2">
            <h2 class="text-primary">Create Category</h2>
        </div>
        <hr />

        <div class="mb-3">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="mb-3">
            <label asp-for="CreatedDataTime"></label>
            <input asp-for="CreatedDataTime" class="form-control" />
            <span asp-validation-for="CreatedDataTime" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary" style="width:150px">Create</button>
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px ;">
            Back to List
        </a>
    </div>
</form>

@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }

}